<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!--Import Google Icon Font-->
      <script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <link rel="stylesheet" href="../../main.css">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="../materialize.min.css"  media="screen,projection"/>
    <title>ROME</title>
</head>

<body>

    <nav>
        <div class="nav-wrapper">
          <a href="/" class="brand-logo center">ROME</a>
          <a href="#" class="sidenav-trigger" data-target="slide-out"><i class="material-icons left" >menu</i></a>
          <ul id="nav-mobile" class="left hide-on-med-and-down">
            <li class="active"><a href="/">Home</a></li>
            <li class="active"><a href="/headline">Headlines</a></li>
            <li class="active"><a href="/search">search</a></li>
          </ul>
          <ul class="hide-on-med-and-down right">
            <form action="">
              <li class=""><input type="text" id="searchbox"  placeholder="Search.."></li>
            <a href="search.ejs"><li class="search-btn"><input type="submit" id="searchbtn"  class="btn" placeholder="Search.."></li></a>
            </form>
          </ul>
        </div>
      </nav>

      <ul id="slide-out" class="sidenav">
        <li><div class="user-view">
          <div class="background">
            <img src="images/office.jpg">
          </div>
          <a href="#user"><img class="circle" src="images/yuna.jpg"></a>
          <a href="#name"><span class="white-text name">John Doe</span></a>
          <a href="#email"><span class="white-text email">jdandturk@gmail.com</span></a>
        </div></li>
        <li class=""><a href="/">Home</a></li>
        <li class=""><a href="/headline">Headlines</a></li>
        <li class=""><a href="/search">search</a></li>
        <li><div class="divider"></div></li>
        <li><a class="subheader">Subheader</a></li>
        <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
      </ul>
      <!-- <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a> -->
            


      <div id="results">

      </div>

    <div class="container">
         
        <h1 class="header">Recent News</h1>
        <% for (let i = 0; i < response.articles.length; i++) { %>
          <div class="row">
            <div class="col s12 m11" id="stack">
              <div class="card" id="story">
                <div class="card-image">
                  <img src="<%= response.articles[i].urlToImage %>">
                </div>
                <div class="card-content">
                  <span class="card-title"><%= response.articles[i].title %> <br>
                    <div>
                      <h4 class="author"> Author: <%=response.articles[i].author  %> </h4>
                    </div>
                    <div> <h4 class="published"> Published: <%= response.articles[i].publishedAt%> </h4> </div>
                </span>
                
                    <!-- <p><%= response.articles[i].description %></p> -->
                </div>
                <div class="card-action" id="link">
                  <a href="<%=response.articles[i].url%>" target="_blank">Read Article</a>
                </div>
              </div>
            </div>
          </div> 
        <% } %>

    </div>
<div class="page">
    <ul class="pagination">
      <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
      <li class="active"><a href="#!">1</a></li>
      <li class="waves-effect"><a href="#!">2</a></li>
      <li class="waves-effect"><a href="#!">3</a></li>
      <li class="waves-effect"><a href="#!">4</a></li>
      <li class="waves-effect"><a href="#!">5</a></li>
      <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>
  </div>
        <script type="text/javascript" src="../materialize.min.js"></script>
        
        <script src="../news.js"></script>
        <script src="../navbar.js"></script>
</body>

</html>